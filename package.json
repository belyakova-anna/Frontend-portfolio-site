{
  "name": "my-nextjs-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "predeploy": "npm run lint && npm run format:check",
    "build": "npm run predeploy && next build",
    "deploy": "next build && touch out/.nojekyll && git add out && git commit -m 'Deploy to GitHub Pages' && git subtree push --prefix out origin master",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format:check": "prettier --check \"**/*.{tsx,ts,js,jsx,css,yml,yaml}\"",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "dependencies": {
    "-": "^0.0.1",
    "@types/node-fetch": "^2.6.11",
    "date-fns": "^3.6.0",
    "dompurify": "^3.1.5",
    "image-size": "^1.1.1",
    "isomorphic-dompurify": "^2.12.0",
    "next": "14.2.4",
    "node-fetch": "^3.3.2",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.24.7",
    "@testing-library/dom": "^10.3.1",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.12",
    "@types/node": "20.14.9",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "14.2.4",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "typescript": "5.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{tsx,ts,css,yml,yaml}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
